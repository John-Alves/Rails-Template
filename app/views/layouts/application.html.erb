<!DOCTYPE html>
<html>
  <head>
    <title>Rails Template</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css" rel="stylesheet">
    <link rel="shortcut icon" href="<%= asset_path('icon.png') %>" >
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body class="skin-default-dark fixed-layout">

    <%= render partial: 'layouts/shared/header' %>

    <%= render partial: 'layouts/shared/sidebar' %>

    <div id="main-wrapper">
      <div class="blank-space hidden-sm-up"></div>

      <div class="page-wrapper">
        <%= configure_and_display_flash_messages %>

        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>
    </div>

    <%= render partial: 'layouts/shared/footer' %>
  </body>
</html>
